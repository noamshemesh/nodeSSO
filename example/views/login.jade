- if ('undefined' !== typeof errors && errors.length)
  ul#errors
    - each error in errors
      li.error= error
form(action='https://access.localtunnel.me/login?continueUrl=#{continueUrl}', method='post')
  #login
    label(for="login") Login
    input(type='text', name="login", value='user')
  #password
    label(for="password") Password
    input(type='password', name="password", value='password')
  #remember
    label(for='remember', value="Remember?")
    input(type="checkbox", name='remember', unchecked)
  #submit
    input(type='submit', value="Login")
